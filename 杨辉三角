#include <iostream>
#include <string>
#include <vector>
#include <bitset>
#include <stack>

using namespace std;


int main() 
{
	int n;
	
	do
	{
		cin >> n;
	} while (n < 1 || n>30);

	int a[30][30]={0};
	for (int i = 0; i < n; i++)
	{
		a[i][0] = a[i][i] = 1;
		for (int j = 1; j < i; j++)
		{
			a[i][j] = a[i - 1][j - 1] + a[i - 1][j];
		}
	}

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j <= i; j++)
		{
			cout << a[i][j]<<' ';
		}
		cout << endl;
	}


	

	return 0;
}
